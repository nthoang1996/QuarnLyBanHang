<div class="row custom-header">
    <div class="col-12 d-flex justify-content-center">
        <h1>BÁO CÁO THẺ KHO</h1>
    </div>
</div>
<div class="row mt-2">
    <div class="col-lg-3 d-sm-none">

    </div>
    <div class="col-lg-2 col-sm-4">
        <h5>Thời khoảng:</h5>
    </div>
    <div class="col-lg-7 col-sm-8">
        <h5>{{this.params.startDate}}->{{this.params.endDate}}</h5>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 d-sm-none">

    </div>
    <div class="col-lg-2 col-sm-4">
        <h5>Cửa hàng - kho:</h5>
    </div>
    <div class="col-lg-7 col-sm-8">
        <h5>{{this.params.store_name}}</h5>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 d-sm-none">

    </div>
    <div class="col-lg-2 col-sm-4">
        <h5>Mặt hàng:</h5>
    </div>
    <div class="col-lg-7 col-sm-8">
        <h5>{{this.params.merchandise}}</h5>
    </div>
</div>

{{#if this.parseResult}}
<div class="row mt-3 overflow-auto">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col" rowspan="2" width="3%" class="text-center font-weight-bold">STT</th>
                <th scope="col" colspan="2" class="text-center font-weight-bold">Số chứng từ</th>
                <th scope="col" rowspan="2" width="25%" class="text-center font-weight-bold">Diễn giải</th>
                <th scope="col" rowspan="2" width="25%" class="text-center font-weight-bold">Loại chứng từ</th>
                <th scope="col" rowspan="2" width="8%" class="text-center font-weight-bold">Nhập trong kỳ</th>
                <th scope="col" rowspan="2" width="8%" class="text-center font-weight-bold">Xuất trong kỳ</th>
                <th scope="col" rowspan="2" width="9%" class="text-center font-weight-bold">Tồn cuối kỳ</th>
            </tr>
            <tr>
                <th scope="col" width="13%" class="text-center font-weight-bold">Mã</th>
                <th scope="col" width="9%" class="text-center font-weight-bold">Ngày</th>
            </tr>
             <tr>
                <th scope="col" class="text-center"></th>
                <th scope="col" class="text-center"></th>
                <th scope="col" class="text-center"></th>
                <th scope="col" class="text-center font-weight-bold">Tồn đầu kỳ</th>
                <th scope="col" class="text-center"></th>
                <th scope="col" class="text-center"></th>
                <th scope="col" class="text-center"></th>
                <th scope="col" class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            {{#each this.parseResult.result}}
            <tr class="text-smd" scope="row">
                <td scope="col" class="text-center">{{inc @index}}</td>
                <td scope="col" class="text-center">{{ID}}</td>
                <td scope="col" class="text-center">{{date}}</td>
                <td scope="col" class="text-left">{{DIENGIAI}}</td>
                <td scope="col" class="text-left">{{LOAICHUNGTU}}</td>
                <td scope="col" class="text-right">{{QTY_IN}}</td>
                <td scope="col" class="text-right">{{QTY_OUT}}</td>
                <td scope="col" class="text-right">{{QTY}}</td>
            </tr>
            {{/each}}
            <tr scope="row" class="text-smd">
                <td scope="col" class="text-center font-weight-bold"></td>
                <td scope="col" colspan="2" class="text-right font-weight-bold"></td>
                <td scope="col" class="text-center font-weight-bold">Cộng phát sinh</td>
                <td scope="col" class="text-right font-weight-bold"></td>
                <td scope="col" class="text-right font-weight-bold">{{this.parseResult.metadata.totalQTY_IN}}</td>
                <td scope="col" class="text-right font-weight-bold">{{this.parseResult.metadata.totalQTY_OUT}}</td>
                <td scope="col" class="text-right font-weight-bold"></td>
            </tr>

            <tr scope="row" class="text-smd">
                <td scope="col" class="text-center font-weight-bold"></td>
                <td scope="col" colspan="2" class="text-right font-weight-bold"></td>
                <td scope="col" class="text-center font-weight-bold">Số dư cuối kỳ</td>
                <td scope="col" class="text-right font-weight-bold"></td>
                <td scope="col" class="text-right font-weight-bold"></td>
                <td scope="col" class="text-right font-weight-bold"></td>
                <td scope="col" class="text-right font-weight-bold">{{this.parseResult.metadata.totalQTY}}</td>
            </tr>
        </tbody>
    </table>
</div>
{{else}}
<div class="mt-3 d-flex justify-content-center w-100">
    <h5>Không có dữ liệu</h5>
</div>
{{/if}}